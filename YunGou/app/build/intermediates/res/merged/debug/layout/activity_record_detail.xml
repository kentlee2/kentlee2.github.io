<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hq="http://schemas.android.com/apk/res-auto">
    <com.haoqi.yungou.customView.NavigationView
        android:id="@+id/nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        hq:leftBackgroud="@drawable/previous_pre"
        hq:rightBackgroud="@drawable/shopping_icon"
        hq:title ="@string/clounds_detail"/>
    <RelativeLayout
        android:id="@+id/layout_detail"
        android:paddingLeft="8.0dip"
        android:paddingTop="8.0dip"
        android:paddingRight="8.0dip"
        android:paddingBottom="8.0dip"
        android:layout_width="fill_parent"
        android:descendantFocusability="afterDescendants"
        android:background="@drawable/all_stroke_normal"
        android:layout_height="wrap_content">
        <ImageView 
            android:id="@+id/iv_goodspic" 
            android:layout_width="140.0dip"
            android:layout_height="140.0dip"
            android:background="@drawable/goods_pic_default"
            android:scaleType="fitCenter" />
        <ImageView
            android:id="@+id/iv_goods_label_shopping_record"
            android:layout_width="36.0dip"
            android:layout_height="36.0dip" 
            android:src="@drawable/label_limit"
            android:scaleType="fitCenter"
            android:visibility="gone"
            android:layout_alignLeft="@+id/iv_goodspic" 
            android:layout_alignTop="@+id/iv_goodspic" 
            android:contentDescription="@string/app_name" />
        <TextView 
            android:textSize="12sp"
            android:textColor="@color/white"
            android:gravity="center" 
            android:id="@+id/tv_goodslabel" 
            android:background="@color/black_alpha_text"
            android:paddingLeft="10.0dip"
            android:paddingTop="3.0dip" 
            android:paddingRight="10.0dip" 
            android:paddingBottom="3.0dip" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            android:layout_alignLeft="@+id/iv_goodspic"
            android:layout_alignRight="@+id/iv_goodspic" 
            android:layout_alignBottom="@+id/iv_goodspic" />
        <TextView
            android:textSize="@dimen/text_medium"
            android:textColor="@color/black_text"
            android:ellipsize="end"
            android:id="@+id/tv_goodsname"
            android:text="商品名"
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_marginLeft="8.0dip" 
            android:layout_marginRight="8.0dip"
            android:maxLines="2"
            android:layout_toRightOf="@+id/iv_goodspic" 
            android:layout_alignTop="@+id/iv_goodspic" />
        <TextView android:textSize="13.0sp" 
            android:id="@+id/tv_goodsjoin"
            android:textColor="@color/gray_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_marginTop="4.0dip"
            android:text="参与人次"
            android:singleLine="true" 
            android:layout_below="@+id/tv_goodsname" 
            android:layout_alignLeft="@+id/tv_goodsname" />
        <TextView android:textSize="13.0sp"
            android:textColor="@color/gray_text"
            android:id="@+id/tv_getter"
            android:text="获得者:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/tv_goodsjoin"
            android:layout_alignLeft="@+id/tv_goodsjoin"
            android:singleLine="true" />
        <TextView android:textSize="13.0sp"
            android:textColor="@color/gray_text"
            android:id="@+id/tv_anounce_time"
            android:text="揭晓时间:"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_getter"
            android:layout_alignLeft="@+id/tv_getter"
            android:singleLine="true" />
        <RelativeLayout
            android:id="@+id/layout_getter"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            android:layout_marginTop="10dip"
            android:layout_below="@+id/tv_anounce_time"
            android:layout_alignLeft="@+id/tv_anounce_time"
            android:layout_marginRight="8.0dip">
            <TextView
                android:id="@+id/tv_news_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/red_text"
                android:textSize="12sp"
                android:text="第2云正在进行"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/btn_add_to_cart" />

            <Button
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="加入购物车"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textColor="@color/white"
                android:textSize="@dimen/text_medium"
                android:background="@drawable/button_add_to_cart"
                android:id="@+id/btn_add_to_cart" />

        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_codes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/all_stroke_normal"
        android:orientation="vertical"
        android:padding="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_clounds_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_text"
            android:text=""/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/clounds_times"
            android:layout_marginLeft="10dp"
            android:textColor="@color/gray_text" />
        </LinearLayout>
        <GridView
            android:id="@+id/code_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="4"/>
    </LinearLayout>
</LinearLayout>