<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@color/background"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hq="http://schemas.android.com/apk/res-auto">
    <com.haoqi.yungou.customView.EmptyView 
        android:id="@+id/emptyview"
        android:visibility="gone" 
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent" />
    <ScrollView android:id="@+id/scrollview"
        android:background="@color/background" 
        android:scrollbars="none" 
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent" 
        android:layout_marginTop="@dimen/title_bar_height" 
        android:layout_above="@+id/layout_bottom">
        <LinearLayout 
            android:orientation="vertical" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/layout_pay"
                android:paddingBottom="8dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/ll_cart"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >
        </LinearLayout>
                <FrameLayout android:id="@+id/fl_check_more"
                    android:background="@drawable/item_normal_bg"
                    android:layout_width="fill_parent"
                    android:layout_height="36.0dip"
                    android:layout_below="@+id/ll_cart"
>
                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/iv_view_cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/cart_more"
                        android:contentDescription="@string/app_name" />
                    <View android:layout_gravity="bottom"
                        android:background="@color/stroke"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/stroke" />
                </FrameLayout>
                <TextView android:textSize="16.0sp" android:textColor="@color/black_text"
                    android:gravity="right" android:id="@+id/total_amount"
                    android:paddingTop="4.0dip"
                    android:paddingRight="16.0dip" android:paddingBottom="4.0dip"
                    android:layout_width="fill_parent" android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_xlarge" android:layout_below="@+id/fl_check_more" />
                <LinearLayout android:orientation="vertical" android:id="@+id/layout_balance_pay"
                    android:background="@drawable/layout_radius_all_gray"
                    android:padding="@dimen/stroke"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/frame_margin_horizontal"
                    android:layout_marginRight="@dimen/frame_margin_horizontal"
                    android:layout_marginTop="@dimen/padding_xlarge"
                    android:layout_below="@+id/total_amount">
                    <RelativeLayout android:id="@+id/layout_score"
                        android:background="@drawable/btn_radius_top"
                        android:paddingLeft="8.0dip"
                        android:paddingTop="8.0dip"
                        android:paddingRight="8.0dip"
                        android:paddingBottom="8.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <CheckBox android:id="@+id/cb_score"
                            android:layout_width="18.0dip"
                            android:layout_height="18.0dip"
                            android:layout_marginRight="8.0dip"
                            android:clickable="false"
                            android:button="@drawable/cart_check_state"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true" />
                        <TextView android:textSize="@dimen/text_micro"
                            android:textColor="@color/black_text"
                            android:id="@+id/tv_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="您的积分不足"
                            android:singleLine="true"
                            android:layout_toRightOf="@+id/cb_score" />
                        <TextView android:textSize="@dimen/text_micro"
                            android:textColor="@color/gray_text"
                            android:id="@+id/tv_score1"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="(您的积分:00)"
                            android:singleLine="true"
                            android:layout_toRightOf="@+id/cb_score"
                            android:layout_below="@+id/tv_score" />
                        <TextView android:textSize="@dimen/text_medium"
                            android:textColor="@color/red_text"
                            android:id="@+id/tv_deducted_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:singleLine="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true" />
                    </RelativeLayout>
                    <RelativeLayout android:id="@+id/layout_balance"
                        android:background="@drawable/btn_radius_bottom"
                        android:paddingLeft="8.0dip"
                        android:paddingTop="8.0dip"
                        android:paddingRight="8.0dip"
                        android:paddingBottom="8.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/stroke">
                        <CheckBox android:id="@+id/cb_balance"
                            android:layout_width="18.0dip"
                            android:layout_height="18.0dip"
                            android:layout_marginRight="8.0dip"
                            android:clickable="false"
                            android:button="@drawable/cart_check_state"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true" />
                        <TextView android:textSize="@dimen/text_micro"
                            android:textColor="@color/black_text"
                            android:id="@+id/tv_balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="可使用余额不足"
                            android:singleLine="true"
                            android:layout_toRightOf="@+id/cb_balance" />
                        <TextView android:textSize="@dimen/text_micro"
                            android:textColor="@color/gray_text"
                            android:id="@+id/tv_balance1"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="(您的余额:￥0.00)"
                            android:singleLine="true"
                            android:layout_toRightOf="@+id/cb_balance"
                            android:layout_below="@+id/tv_balance" />
                        <TextView android:textSize="@dimen/text_medium"
                            android:textColor="@color/red_text"
                            android:id="@+id/tv_deducted_balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true" />
                    </RelativeLayout>
                </LinearLayout>
                <TextView android:textSize="16.0sp"
                    android:textColor="@color/black_text"
                    android:gravity="right"
                    android:id="@+id/tv_ebank_payment"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8.0dip"
                    android:layout_marginTop="8.0dip"
                    android:layout_marginRight="16.0dip"
                    android:layout_marginBottom="8.0dip"
                    android:text="需网银支付："
                    android:singleLine="true"
                    android:layout_below="@+id/layout_balance_pay" />
                <View android:layout_width="fill_parent"
                    android:layout_height="8dp" />
            </RelativeLayout>
            <include
                android:id="@+id/layout_pay_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/layout_pay_style"
                android:layout_marginLeft="@dimen/frame_margin_horizontal"
                android:layout_marginTop="@dimen/frame_margin_horizontal"
                android:layout_marginRight="@dimen/frame_margin_horizontal"/>
            <RelativeLayout
                android:id="@+id/layout_submit"
                android:layout_width="fill_parent"
                android:visibility="gone"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/text_large"
                    android:textColor="@color/black_text"
                    android:id="@+id/tv_pay_has_submited"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dip"
                    android:text="@string/has_submited"
                    android:layout_centerHorizontal="true" />
                <TextView
                    android:textSize="@dimen/text_medium"
                    android:textColor="@color/gray_text"
                    android:id="@+id/tv_pay_to_wait_for_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_large"
                    android:text="@string/submit_data"
                    android:layout_below="@+id/tv_pay_has_submited"
                    android:layout_centerHorizontal="true" />
                <ProgressBar
                    android:id="@+id/pgb_progress"
                    android:background="@drawable/progress_round_bg"
                    android:layout_width="fill_parent"
                    android:layout_height="8.0dip"
                    android:layout_marginLeft="8.0dip"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8.0dip"
                    android:indeterminate="true"
                    android:indeterminateDrawable="@drawable/progress_indeterminate_horizontal"
                    android:layout_below="@+id/tv_pay_to_wait_for_result"
                    style="?android:attr/progressBarStyleHorizontal" />
            </RelativeLayout>
            <LinearLayout
                android:orientation="vertical"
                android:visibility="gone"
                android:id="@+id/layout_result"
                android:paddingBottom="12.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/ll_blindphone_notice"
                    android:background="@drawable/tv_notice_state"
                    android:visibility="gone" android:layout_width="fill_parent"
                    android:layout_height="34.0dip">
                    <TextView
                        android:textSize="12sp"
                        android:textColor="@color/red_text"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tv_blindphone_notice"
                        android:paddingLeft="10.0dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/notice_blindphone"
                        android:drawableLeft="@drawable/icon_notice"
                        android:drawableRight="@drawable/notice_icon_bindphone"
                        android:drawablePadding="3.0dip" />
                </LinearLayout>
                <RelativeLayout android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <TextView android:textSize="20.0sp"
                        android:textColor="@color/black_text"
                        android:id="@+id/tv_pay_result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30.0dip"
                        android:singleLine="true"
                        android:drawablePadding="5.0dip"
                        android:layout_centerHorizontal="true" />
                    <TextView
                        android:textSize="15.0sp"
                        android:textColor="@color/gray_text"
                        android:id="@+id/tv_pay_result_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15.0dip"
                        android:singleLine="true"
                        android:layout_below="@+id/tv_pay_result"
                        android:layout_centerHorizontal="true" />
                    <LinearLayout android:orientation="horizontal"
                        android:id="@+id/layout_button"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8.0dip"
                        android:layout_marginTop="20.0dip"
                        android:layout_marginRight="8.0dip"
                        android:layout_marginBottom="20.0dip"
                        android:layout_below="@+id/tv_pay_result_num">
                        <Button
                            android:textSize="@dimen/text_medium"
                            android:textColor="@color/black_text"
                            android:gravity="center"
                            android:id="@+id/btn_check_shopping_record"
                            android:background="@drawable/btn_check_record_bg"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:text="@string/check_shopping_record"
                            android:layout_weight="1.0" />
                        <Button android:textSize="@dimen/text_medium"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:id="@+id/btn_go_shopping"
                            android:background="@drawable/button_go_shopping"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8.0dip"
                            android:text="@string/continue_shopping"
                            android:layout_weight="1.0" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/layout_fail_goods"
                        android:background="@drawable/layout_radius_all_white_stroke_orange"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8.0dip"
                        android:layout_marginRight="8.0dip"
                        android:layout_below="@+id/layout_button">
                        <TextView
                            android:textSize="@dimen/text_small"
                            android:textColor="@color/theme"
                            android:gravity="center"
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/tv_tips_back"
                            android:background="@android:color/transparent"
                            android:layout_width="fill_parent"
                            android:layout_height="36.0dip"
                            android:layout_marginLeft="8.0dip"
                            android:layout_marginTop="8.0dip"
                            android:text="@string/tips_pay_fail" />
                        <LinearLayout android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8.0dip" android:layout_marginRight="8.0dip">
                            <View android:layout_gravity="center_vertical"
                                android:background="@drawable/line"
                                android:layout_width="0.0dip"
                                android:layout_height="1.0dip" android:layout_weight="1.0" />
                            <TextView android:textSize="14.0sp"
                                android:textColor="@color/gray_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5.0dip" android:text="@string/fail_payed_goods" android:singleLine="true" />
                            <View android:layout_gravity="center_vertical"
                                android:background="@drawable/line" android:layout_width="0.0dip" android:layout_height="1.0dip" android:layout_weight="1.0" />
                        </LinearLayout>
                        <ListView android:id="@+id/lv_fail_goods"
                            android:padding="@dimen/stroke" android:fadingEdge="none" android:layout_width="fill_parent" android:layout_height="wrap_content" android:divider="@null" android:dividerHeight="0.0dip" android:headerDividersEnabled="false" android:footerDividersEnabled="false" />
                    </LinearLayout>
                    <LinearLayout android:orientation="vertical"
                        android:id="@+id/layout_success_goods"
                        android:background="@drawable/layout_radius_all_white_stroke_gray"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8.0dip"
                        android:layout_marginTop="12.0dip"
                        android:layout_marginRight="8.0dip"
                        android:layout_marginBottom="12.0dip"
                        android:layout_below="@+id/layout_fail_goods">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8.0dip"
                            android:layout_marginTop="8.0dip"
                            android:layout_marginRight="8.0dip">
                            <View
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/line"
                                android:layout_width="0.0dip"
                                android:layout_height="1.0dip"
                                android:layout_weight="1.0" />
                            <TextView
                                android:textSize="14.0sp"
                                android:textColor="@color/gray_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5.0dip"
                                android:text="@string/success_payed_goods"
                                android:singleLine="true" />
                            <View
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/line"
                                android:layout_width="0.0dip"
                                android:layout_height="1.0dip"
                                android:layout_weight="1.0" />
                        </LinearLayout>
                        <ListView android:id="@+id/lv_success_goods"
                            android:padding="@dimen/stroke"
                            android:fadingEdge="none"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:divider="@null"
                            android:dividerHeight="0.0dip"
                            android:headerDividersEnabled="false"
                            android:footerDividersEnabled="false" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <com.haoqi.yungou.customView.NavigationView
        android:id="@+id/titlebar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_bar_height"
        hq:title ="@string/js_pay"
        hq:leftBackgroud="@drawable/previous_pre"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/layout_bottom"
        android:background="@color/main_background"
        android:paddingBottom="8dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <View android:background="@color/stroke"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/stroke" />
        <Button android:textSize="17sp"
            android:textColor="@color/white"
            android:id="@+id/btn_confirm_to_pay"
            android:background="@drawable/btn_radius_all_red2dim"
            android:padding="8.0dip"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="8.0dip"
            android:layout_marginTop="8.0dip"
            android:layout_marginRight="8.0dip"
            android:enabled="false"
            android:text="@string/confirm_to_pay" />
    </LinearLayout>
</RelativeLayout>