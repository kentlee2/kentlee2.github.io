<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@color/setting_background"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hq="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/ll_alter_nickname"
        android:background="@drawable/layout_radius_all_white_stroke_gray"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/title_bar">
        <EditText
            android:textSize="15sp"
            android:textColor="@color/black_text"
            android:textColorHint="@color/tips_text"
            android:id="@+id/et_nickname"
            android:background="@null"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_marginLeft="8.0dip"
            android:layout_marginRight="8.0dip"
            android:singleLine="true"
            android:maxLength="8"
            android:layout_weight="1.0"
            android:inputType="text" />
        <ImageView android:layout_gravity="center_vertical"
            android:id="@+id/iv_clear"
            android:padding="10.0dip"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/clear_bg"
            android:scaleType="centerCrop" />
    </LinearLayout>
    <TextView android:textSize="16sp"
        android:textColor="@color/black_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8.0dip"
        android:text="@string/tips_nickname"
        android:layout_below="@+id/ll_alter_nickname"
        android:layout_alignLeft="@+id/ll_alter_nickname"
        android:layout_alignRight="@+id/ll_alter_nickname" />
    <com.haoqi.yungou.customView.NavigationView
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        hq:leftBackgroud ="@drawable/previous_pre"
        hq:rightText ="@string/complete"
        hq:title = "@string/edit_info"/>
</RelativeLayout>