<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:id="@+id/all_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/theme">
        <ImageView
            android:id="@+id/iv_search_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="13dp"
            android:background="@drawable/common_tab_bg"
            android:src="@drawable/previous_pre"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/et_search_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/default_gap"
            android:paddingLeft="2dp"
            android:layout_marginRight="@dimen/default_gap"
            android:background="@drawable/layout_radius_all_white_stroke_gray"
            android:layout_toRightOf="@+id/iv_search_back"
            android:layout_toLeftOf="@+id/tv_goods_search"
            android:layout_toStartOf="@+id/tv_goods_search" />
        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="18sp"
            android:clickable="true"
            android:layout_centerVertical="true"
            android:background="@drawable/common_tab_bg"
            android:text="@string/search"
            android:id="@+id/tv_goods_search" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_recent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/all_stroke"
            android:textSize="@dimen/text_small"
            android:textColor="@color/black_text"
            android:text="@string/recent_search"/>
        <Button
            android:id="@+id/btn_hot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/text_small"
            android:textColor="@color/black_text"
            android:background="@drawable/all_stroke"
            android:text="@string/hot_search"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/cursor"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_radius_all_red" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/btn_radius_all_red"
            android:visibility="invisible" />
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/fragment_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
</LinearLayout>