<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@color/setting_background"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hq="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:scrollbars="none"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/title_bar">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="13sp"
                android:textColor="@color/black_text"
                android:gravity="center"
                android:id="@+id/tv_email"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/frame_margin_horizontal"
                android:layout_marginTop="50.0dip"
                android:layout_marginRight="@dimen/frame_margin_horizontal"
                android:lineSpacingExtra="8.0dip" />
            <Button android:textSize="17sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/btn_login_email"
                android:background="@drawable/btn_radius_all_red2dim"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="@dimen/frame_margin_horizontal"
                android:layout_marginTop="@dimen/padding_xlarge"
                android:layout_marginRight="@dimen/frame_margin_horizontal"
                android:text="@string/login_email" />
        </LinearLayout>
    </ScrollView>
    <com.haoqi.yungou.customView.NavigationView
        android:id="@+id/nav_forget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        hq:leftBackgroud="@drawable/previous_pre"
        hq:title="@string/find_pwd"/>
</RelativeLayout>