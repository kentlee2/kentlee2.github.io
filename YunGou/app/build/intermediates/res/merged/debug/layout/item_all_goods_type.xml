<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="85dp">
  <ImageView
      android:id="@+id/goods_image"
      android:layout_width="70dp"
      android:layout_height="70dp"
      android:layout_centerVertical="true"/>
    <ImageView
        android:id="@+id/iv_goods_label"
        android:visibility="visible"
        android:layout_width="24.0dip"
        android:layout_height="24.0dip"
        android:src="@drawable/label_limit"
        android:scaleType="fitCenter"
        android:layout_alignLeft="@+id/goods_image"
        android:layout_alignTop="@+id/goods_image"
        android:contentDescription="@string/app_name" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/goods_image"
        android:layout_toLeftOf="@+id/add_to_cart"
        android:layout_toStartOf="@+id/add_to_cart">
        <TextView
            android:id="@+id/all_goods_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/default_gap"
            android:layout_marginTop="5dp"
            android:textSize="13sp"
            android:textColor="@color/black_text"
            android:maxLength="38"
            android:maxLines="2"
            android:text="(第166云) 苹果（Apple）iPhone 6s 64G版 4G手机"/>
        <TextView
            android:id="@+id/goods_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_text"
            android:layout_marginTop="@dimen/default_gap"
            android:text="价值：4999.00"
            android:layout_below="@+id/all_goods_title"
            android:layout_alignParentLeft="true" />
        <ProgressBar
            style="@style/StyleProgressBarMini"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:max="100"
            android:layout_marginRight="@dimen/default_gap"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:id="@+id/progressBar"
            android:indeterminate="false" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/add_to_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/add_to_cart"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="5dp"
        android:clickable="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>