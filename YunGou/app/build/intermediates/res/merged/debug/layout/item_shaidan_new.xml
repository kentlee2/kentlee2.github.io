<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:id="@+id/layout_root"
    android:paddingTop="8.0dip"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rounded="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8.0dip"
        android:layout_marginRight="8.0dip">
        <ImageView
            android:id="@+id/sriv_avatar"
            android:focusable="false"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:layout_marginRight="8.0dip"
            android:src="@drawable/account_pic_default"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true" />
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/sriv_avatar"
            android:layout_centerVertical="true">
            <TextView
                android:textSize="13.0sp"
                android:textColor="@color/link_text"
                android:id="@+id/tv_nickname"
                android:focusable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/horizontal_margin_normal"
                android:text="机主伤势过重"
                android:singleLine="true"
                android:maxLength="8" />
            <TextView
                android:textSize="13.0sp"
                android:textColor="@color/gray_text"
                android:id="@+id/tv_shaidan_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今天早上"
                android:singleLine="true"
                android:layout_toRightOf="@+id/tv_nickname"
                android:layout_alignBottom="@+id/tv_nickname" />
            <TextView
                android:textSize="@dimen/text_medium"
                android:textColor="@color/black_text"
                android:gravity="bottom"
                android:id="@+id/tv_shaidan_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2.0dip"
                android:text="感谢云购"
                android:singleLine="true"
                android:layout_below="@+id/tv_shaidan_time" />
        </RelativeLayout>
    </RelativeLayout>
    <View android:background="@color/stroke"
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_marginLeft="8.0dip"
        android:layout_marginTop="@dimen/vertical_margin_normal"
        android:layout_marginRight="8.0dip"
        android:layout_marginBottom="12.0dip" />
    <TextView android:textSize="@dimen/text_small"
        android:textColor="@color/gray_text"
        android:id="@+id/tv_shaidan_summary"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8.0dip"
        android:layout_marginRight="8.0dip"
        android:maxLines="2"
        android:lineSpacingMultiplier="1.2" />
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8.0dip"
        android:layout_marginTop="8.0dip"
        android:layout_marginRight="8.0dip">
        <ImageView android:id="@+id/siv_shaidan_summary1"
            android:layout_width="0.0dip"
            android:layout_height="96.0dip"
            android:scaleType="centerCrop"
            android:layout_weight="1.0"
            android:background="@drawable/goods_pic_default"/>
        <ImageView android:id="@+id/siv_shaidan_summary2"
            android:layout_width="0.0dip"
            android:layout_height="96.0dip"
            android:layout_marginLeft="8.0dip"
            android:layout_marginRight="8.0dip"
            android:scaleType="centerCrop"
            android:layout_weight="1.0" />
        <ImageView android:id="@+id/siv_shaidan_summary3"
            android:layout_width="0.0dip"
            android:layout_height="96.0dip"
            android:scaleType="centerCrop"
            android:layout_weight="1.0" />
    </LinearLayout>
    <View android:background="@color/stroke"
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_marginLeft="8.0dip"
        android:layout_marginTop="@dimen/vertical_margin_normal"
        android:layout_marginRight="8.0dip" />
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8.0dip"
        android:layout_marginRight="8.0dip"
        android:baselineAligned="false">
        <RelativeLayout
            android:id="@+id/rl_envy"
            android:background="@android:color/transparent"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0">
            <TextView android:textSize="@dimen/text_small"
                android:textColor="@color/gray_text"
                android:gravity="center_vertical"
                android:id="@+id/tv_envy"
                android:background="@android:color/transparent"
                android:paddingLeft="8.0dip"
                android:paddingTop="10.0dip"
                android:paddingRight="8.0dip"
                android:paddingBottom="10.0dip"
                android:focusable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/shaidan_envy"
                android:drawablePadding="4.0dip"
                android:layout_centerInParent="true" />
            <TextView android:textSize="@dimen/text_small"
                android:textColor="#ffff0000"
                android:id="@+id/tv_envy_anim"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+1"
                android:layout_centerInParent="true" />
        </RelativeLayout>
        <RelativeLayout android:id="@+id/rl_comment"
            android:background="@android:color/transparent"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0">
            <TextView android:textSize="@dimen/text_small"
                android:textColor="@color/gray_text"
                android:gravity="center_vertical"
                android:id="@+id/tv_comment"
                android:background="@android:color/transparent"
                android:paddingLeft="8.0dip"
                android:paddingTop="10.0dip"
                android:paddingRight="8.0dip"
                android:paddingBottom="10.0dip"
                android:focusable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/shaidan_comment"
                android:drawablePadding="4.0dip"
                android:layout_centerInParent="true" />
        </RelativeLayout>
        <RelativeLayout android:id="@+id/rl_share"
            android:background="@android:color/transparent"
            android:paddingTop="8.0dip"
            android:paddingBottom="8.0dip"
            android:descendantFocusability="blocksDescendants"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_weight="1.0">
            <ImageView android:id="@+id/iv_share"
                android:background="@android:color/transparent"
                android:paddingLeft="8.0dip"
                android:paddingRight="8.0dip"
                android:focusable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shaidan_share"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </LinearLayout>
    <View android:background="@color/stroke"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/stroke" />
    <View android:id="@+id/divider"
        android:background="@color/divider"
        android:layout_width="fill_parent"
        android:layout_height="8.0dip" />
</LinearLayout>