<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:descendantFocusability="blocksDescendants">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/limit_goods_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:layout_marginTop="5dp" />
        <TextView
            android:id="@+id/bubble_limit_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bubble_bg"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_gravity="right|bottom"
            android:layout_margin="10dp"
            android:textSize="12sp"
            android:text="限购5人次"
            android:layout_marginTop="5dp" />
    </FrameLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_gap"
        android:layout_marginRight="@dimen/default_gap"
        layout="@layout/layout_goods_progress"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/default_gap"
    android:layout_marginLeft="@dimen/default_gap"
    android:layout_marginRight="@dimen/default_gap"
    android:orientation="horizontal">
<Button
    android:id="@+id/go_shopping"
    android:layout_width="wrap_content"
    android:layout_height="30dp"
    android:textColor="@color/white"
    android:text="@string/go_shopping"
    android:paddingLeft="@dimen/padding_small"
    android:paddingRight="@dimen/padding_small"
    android:textSize="14sp"
    android:background="@drawable/btn_radius_all_red2dim"/>

    <ImageView
        android:id="@+id/add_to_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shopping_car"
        android:layout_alignParentRight="true"/>
</RelativeLayout>
</LinearLayout>