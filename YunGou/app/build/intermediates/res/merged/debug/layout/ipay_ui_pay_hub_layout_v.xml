<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ipay_color_value_1" >

    <include
        android:id="@+id/v_title_bar_aipay"
        layout="@layout/ipay_ui_title_bar_normal" />

    <LinearLayout
        android:id="@+id/rl_feeinfo_aipay_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/v_title_bar_aipay"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/ipay_color_value_10"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/ipay_margin_4"
                android:background="@color/ipay_color_value_10"
                android:text="购买遇到问题时，请联系24小时客服"
                android:textColor="@color/ipay_color_value_7"
                android:textSize="@dimen/ipay_text_size_12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/ipay_color_value_10"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/ipay_margin_4" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ipay_service_telephone" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="客服电话:"
                            android:textColor="@color/ipay_color_value_5"
                            android:textSize="@dimen/ipay_text_size_12" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="4007888580"
                            android:textColor="@color/ipay_color_value_5"
                            android:textSize="@dimen/ipay_text_size_12" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/ipay_margin_4" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ipay_service_qq" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="客服QQ:"
                            android:textColor="@color/ipay_color_value_5"
                            android:textSize="@dimen/ipay_text_size_12" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="4007888580"
                            android:textColor="@color/ipay_color_value_5"
                            android:textSize="@dimen/ipay_text_size_12" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ipay_margin_10"
            android:layout_marginLeft="@dimen/ipay_margin_15"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品名称"
                android:textColor="@color/ipay_color_value_4"
                android:textSize="@dimen/ipay_text_size_16" />

            <TextView
                android:id="@+id/tv_wares_name_aipay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ipay_margin_10"
                android:text="测试商品"
                android:textColor="@color/ipay_color_value_6"
                android:textSize="@dimen/ipay_text_size_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ipay_margin_6"
            android:layout_marginBottom="@dimen/ipay_margin_10"
            android:layout_marginLeft="@dimen/ipay_margin_15"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="应付金额"
                android:textColor="@color/ipay_color_value_4"
                android:textSize="@dimen/ipay_text_size_16" />

            <TextView
                android:id="@+id/tv_price_aipay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ipay_margin_10"
                android:layout_marginRight="2dp"
                android:text="328"
                android:textColor="@color/ipay_color_value_8"
                android:textSize="@dimen/ipay_text_size_20" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textColor="@color/ipay_color_value_4"
                android:textSize="@dimen/ipay_text_size_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ipay_margin_35"
            android:background="@color/ipay_color_value_2_0"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_buy_voucher_card"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:paddingRight="20dp"
                android:text="购买充值卡"
                android:textColor="@color/ipay_color_value_7"
                android:textSize="@dimen/ipay_text_size_13" />

            <TextView
                android:id="@+id/tv_use_voucher_card"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="30dp"
                android:text="使用充值卡"
                android:textColor="@color/ipay_color_value_5"
                android:textSize="@dimen/ipay_text_size_13" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ipay_divid_line_1_5" >

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/ipay_divid_line_1_5"
                android:background="@color/ipay_color_value_3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/ipay_divid_line_1_5"
                android:orientation="horizontal" >

                <View
                    android:id="@+id/buy_card_line"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@color/ipay_color_value_7" />

                <View
                    android:id="@+id/use_card_line"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:background="@color/ipay_color_value_7"
                    android:visibility="invisible" />
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ipay_margin_35"
            android:layout_margin="10dp"
            android:background="@color/ipay_color_value_1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_price_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ipay_border_blue_style"
                android:gravity="center"
                android:text="49 元"
                android:textColor="@color/ipay_color_value_7"
                android:textSize="@dimen/ipay_text_size_13" />

            <TextView
                android:id="@+id/tv_price_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:background="@drawable/ipay_border_style"
                android:gravity="center"
                android:text="50 元"
                android:textColor="@color/ipay_color_value_5"
                android:textSize="@dimen/ipay_text_size_13" />

            <TextView
                android:id="@+id/tv_price_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:background="@drawable/ipay_border_style"
                android:gravity="center"
                android:text="100 元"
                android:textColor="@color/ipay_color_value_5"
                android:textSize="@dimen/ipay_text_size_13" />

            <TextView
                android:id="@+id/tv_price_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:background="@drawable/ipay_border_style"
                android:gravity="center"
                android:text="200 元"
                android:textColor="@color/ipay_color_value_5"
                android:textSize="@dimen/ipay_text_size_13" />

            <TextView
                android:id="@+id/tv_price_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:background="@drawable/ipay_border_style"
                android:gravity="center"
                android:text="500 元"
                android:textColor="@color/ipay_color_value_5"
                android:textSize="@dimen/ipay_text_size_13" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="请选择付款方式 "
            android:textColor="@color/ipay_color_value_4"
            android:textSize="@dimen/ipay_text_size_13" />

        <View
            android:id="@+id/v_divider_aipay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ipay_divid_line_h"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/ipay_color_value_3" />

        <ScrollView
            android:id="@+id/sl_pay_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rl_feeinfo_aipay_up"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/ipay_color_value_1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/ll_pay_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_more_paytype"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/ipay_color_value_2"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:visibility="gone" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ipay_dropdown_bg"
                        android:text="更多支付方式 "
                        android:textColor="@color/ipay_color_value_6"
                        android:textSize="@dimen/ipay_text_size_15" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ipay_margin_8"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/ipay_margin_10"
                        android:layout_marginRight="@dimen/ipay_margin_10"
                        android:src="@drawable/ipay_checkbox" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已阅读并同意"
                        android:textColor="@color/ipay_color_value_4"
                        android:textSize="@dimen/ipay_text_size_12" />

                    <TextView
                        android:id="@+id/tv_voucher_server"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="《神州行充值卡服务章程》"
                        android:textColor="@color/ipay_color_value_7"
                        android:textSize="@dimen/ipay_text_size_12" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ipay_margin_5"
                    android:layout_marginBottom="@dimen/ipay_margin_35"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/ipay_margin_10"
                        android:layout_marginRight="@dimen/ipay_margin_10"
                        android:src="@drawable/ipay_checkbox" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="购买后将自动完成支付"
                        android:textColor="@color/ipay_color_value_4"
                        android:textSize="@dimen/ipay_text_size_12" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_notice_aipay"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:background="@color/ipay_transparent_75"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/ipay_margin_10"
            android:contentDescription="@null"
            android:scaleType="center"
            android:src="@drawable/ipay_ui_notice" />

        <com.iapppay.ui.widget.MarqueeTextView
            android:id="@+id/tv_notice_aipay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:textColor="@color/ipay_color_value_2"
            android:textSize="@dimen/ipay_text_size_12" />

        <ImageView
            android:id="@+id/iv_notice_del_aipay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/ipay_margin_10"
            android:contentDescription="@null"
            android:scaleType="center"
            android:src="@drawable/ipay_ui_close_circle" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/remoteImageView_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/ipay_transparent_75"
        android:visibility="gone" >

        <RelativeLayout
            android:layout_width="280dip"
            android:layout_height="200dip"
            android:layout_centerInParent="true" >

            <com.iapppay.ui.widget.RemoteImageView
                android:id="@+id/remoteImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" >
            </com.iapppay.ui.widget.RemoteImageView>

            <ImageView
                android:id="@+id/remoteImageView_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dip"
                android:layout_marginTop="10dip"
                android:src="@drawable/ipay_ad_close" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>