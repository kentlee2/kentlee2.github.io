<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@color/stroke"
    android:paddingTop="@dimen/stroke"
    android:paddingBottom="@dimen/stroke"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:textSize="@dimen/text_medium"
        android:textColor="@color/black_text"
        android:gravity="center_vertical"
        android:id="@+id/tv_calculate_details"
        android:background="@drawable/item_normal_bg"
        android:paddingLeft="8.0dip"
        android:paddingTop="10.0dip"
        android:paddingRight="8.0dip"
        android:paddingBottom="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/stroke"
        android:text="计算详情"
        android:drawableRight="@drawable/gray_arrows" />
    <TextView
        android:textSize="@dimen/text_medium"
        android:textColor="@color/black_text"
        android:gravity="center_vertical"
        android:id="@+id/tv_detail"
        android:background="@drawable/item_normal_bg"
        android:paddingLeft="8.0dip"
        android:paddingTop="10.0dip"
        android:paddingRight="8.0dip"
        android:paddingBottom="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="图文详情"
        android:drawableRight="@drawable/gray_arrows" />
    <TextView
        android:textSize="@dimen/text_medium"
        android:textColor="@color/black_text"
        android:gravity="center_vertical"
        android:id="@+id/tv_shopping_record"
        android:background="@drawable/item_normal_bg"
        android:paddingLeft="8.0dip"
        android:paddingTop="10.0dip"
        android:paddingRight="8.0dip"
        android:paddingBottom="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/stroke"
        android:text="所有参与记录"
        android:drawableRight="@drawable/gray_arrows" />
    <TextView
        android:textSize="@dimen/text_medium"
        android:textColor="@color/black_text"
        android:gravity="center_vertical"
        android:id="@+id/tv_shaidan"
        android:background="@drawable/item_normal_bg"
        android:paddingLeft="8.0dip"
        android:paddingTop="10.0dip"
        android:paddingRight="8.0dip"
        android:paddingBottom="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/stroke"
        android:text="商品晒单"
        android:drawableRight="@drawable/gray_arrows" />
    <TextView
        android:textSize="@dimen/text_medium"
        android:textColor="@color/black_text"
        android:gravity="center_vertical"
        android:id="@+id/tv_communication"
        android:background="@drawable/item_normal_bg"
        android:paddingLeft="8.0dip"
        android:paddingTop="10.0dip"
        android:paddingRight="8.0dip"
        android:paddingBottom="10.0dip"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/stroke"
        android:text="交流互动"
        android:drawableRight="@drawable/gray_arrows" />
</LinearLayout>