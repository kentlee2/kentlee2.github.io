<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@color/setting_background"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hq="http://schemas.android.com/apk/res-auto">
    <com.haoqi.yungou.customView.NavigationView
        android:id="@+id/title_bar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_bar_height"
        hq:leftBackgroud="@drawable/previous_pre"
        hq:title = "@string/register"/>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/title_bar">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/layout_input"
            android:background="@drawable/layout_radius_all_white_stroke_gray"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp">
            <EditText
                android:textSize="15sp"
                android:textColor="@color/black_text"
                android:textColorHint="@color/tips_text"
                android:gravity="center|left"
                android:layout_gravity="center_vertical"
                android:id="@+id/et_telephone"
                android:background="@null"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="8.0dip"
                android:layout_marginRight="8.0dip"
                android:hint="@string/tips_tel_num"
                android:singleLine="true"
                android:maxLength="11"
                android:digits="\ 0123456789"
                android:layout_weight="1.0"
                android:inputType="phone" />
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/iv_clear"
                android:paddingTop="8.0dip"
                android:paddingRight="8.0dip"
                android:paddingBottom="8.0dip"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/clear_bg"
                android:scaleType="centerCrop" />
        </LinearLayout>
        <include
            android:id="@+id/linear_register_verifycode"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:layout_below="@+id/layout_input"
            layout="@layout/layout_verifycode" />
        <Button
            android:textSize="17sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/btn_next"
            android:background="@drawable/btn_radius_all_red2dim"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:text="@string/nextsteup"
            android:layout_below="@+id/linear_register_verifycode" />
        <RelativeLayout
            android:id="@+id/rl_check"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_below="@+id/btn_next">
             <CheckBox
                 android:id="@+id/checkBox"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:checked="true"
                 android:layout_centerVertical="true"
                 android:text="@string/read_and_agree"
                 android:textColor="@color/declare_text"
                 android:button="@drawable/checkbox_choose_small" />
            <TextView
                android:textSize="13sp"
                android:textColor="@color/link_text"
                android:gravity="bottom"
                android:id="@+id/tv_agreement"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/agreement"
                android:singleLine="true"
                android:layout_toRightOf="@+id/checkBox" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>