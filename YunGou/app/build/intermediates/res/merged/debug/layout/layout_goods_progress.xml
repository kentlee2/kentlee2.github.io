<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
        <TextView
            android:id="@+id/all_goods_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/default_gap"
            android:layout_marginTop="5dp"
            android:textSize="13sp"
            android:textColor="@color/black_text"
            android:maxLength="38"
            android:maxLines="2"
            android:text="(第166云) 苹果（Apple）iPhone 6s 64G版 4G手机"/>
        <ProgressBar
            style="@style/StyleProgressBarMini"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:max="100"
            android:layout_marginTop="@dimen/default_gap"
            android:layout_below="@+id/goods_value"
            android:layout_marginRight="@dimen/default_gap"
            android:layout_toLeftOf="@+id/add_to_cart"
            android:id="@+id/progressBar"
            android:indeterminate="false" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
                <TextView
                    android:id="@+id/hasJoin_num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/red_text"
                    android:textSize="11sp"
                    android:text="0"/>
                <TextView
                    android:id="@+id/total_num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textColor="@color/black_text"
                    android:textSize="11sp"
                    android:text="0"/>
                <TextView
                    android:id="@+id/remain_num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/blue"
                    android:textSize="11sp"
                    android:text="0"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="11sp"
                    android:textColor="@color/gray_text"
                    android:text="已参与"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textSize="11sp"
                    android:textColor="@color/gray_text"
                    android:text="总需人次"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textSize="11sp"
                    android:textColor="@color/gray_text"
                    android:text="剩余"/>
        </LinearLayout>
</LinearLayout>