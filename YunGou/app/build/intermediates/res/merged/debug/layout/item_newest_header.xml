<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/home_annoucing_top_left"
    android:paddingTop="10.0dip"
    android:paddingBottom="10.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView android:id="@+id/iv_goodspic"
        android:layout_width="100.0dip"
        android:layout_height="100.0dip"
        android:scaleType="fitCenter"
        android:layout_centerVertical="true"
        android:background="@drawable/goods_pic_default"/>
    <ImageView
        android:id="@+id/iv_goodslabel"
        android:layout_width="40.0dip"
        android:layout_height="40.0dip"
        android:src="@drawable/label_limit"
        android:scaleType="centerCrop"
        android:visibility="gone"
        android:contentDescription="@string/app_name" />
    <RelativeLayout
        android:id="@+id/rl_account"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8.0dip"
        android:layout_marginRight="0.0dip"
        android:layout_toRightOf="@+id/iv_goodspic"
        android:layout_alignTop="@+id/iv_goodspic">
        <TextView android:textSize="@dimen/text_medium"
            android:textColor="@color/black_text"
            android:gravity="top"
            android:id="@+id/tv_goodsName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:layout_marginRight="@dimen/default_gap"
            android:text="tv_goodsName"
            android:layout_toLeftOf="@+id/sriv_avatar"
            android:layout_alignTop="@+id/sriv_avatar" />
        <TextView android:textSize="@dimen/text_micro"
            android:textColor="@color/declare_text"
            android:id="@+id/tv_price"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="tv_price"
            android:layout_below="@+id/tv_goodsName" />
    </RelativeLayout>

    <com.haoqi.yungou.fragment.AnnounceButton
        android:id="@+id/jx_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_goodspic"
        android:layout_marginRight="@dimen/default_gap"
        android:layout_alignLeft="@+id/rl_account"
        android:layout_alignStart="@+id/rl_account" />
</RelativeLayout>