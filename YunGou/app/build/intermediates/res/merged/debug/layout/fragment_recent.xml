<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:hq="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.haoqi.yungou.customView.NavigationView
        android:id="@+id/nav_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        hq:rightText="@string/all_goods_type"
        hq:title ="@string/newest"/>
    <com.haoqi.yungou.widget.XListView
        android:id="@+id/newest_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:headerDividersEnabled="false"
        android:footerDividersEnabled="false"
        android:divider="@null">
    </com.haoqi.yungou.widget.XListView>
</LinearLayout>
