<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@color/setting_background" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hq="http://schemas.android.com/apk/res-auto">
    <com.haoqi.yungou.customView.NavigationView
        android:id="@+id/title_bar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_bar_height"
        hq:leftBackgroud="@drawable/previous_pre"
        hq:title ="@string/verify"/>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/title_bar">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="13dp"
                android:textColor="@color/gray_text"
                android:id="@+id/tips_notice_ems_phone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:text="@string/tips_has_send_msg" />
            <LinearLayout
                android:orientation="horizontal"
                android:background="@drawable/layout_radius_all_white_stroke_gray"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp">
                <ImageView android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8.0dip"
                    android:layout_marginTop="14.0dip"
                    android:layout_marginBottom="14.0dip"
                    android:src="@drawable/login_password"
                    android:scaleType="fitCenter" />
                <EditText
                    android:textSize="15sp"
                    android:textColor="@color/black_text"
                    android:textColorHint="@color/tips_text"
                    android:gravity="center|left"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/edit_text"
                    android:background="@null"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="8.0dip"
                    android:layout_marginRight="8.0dip"
                    android:hint="@string/tips_verify_code"
                    android:singleLine="true"
                    android:maxLength="8"
                    android:digits="@string/register_name_check"
                    android:layout_weight="1.0"
                    android:inputType="textEmailAddress" />
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/iv_clear"
                    android:paddingTop="8.0dip"
                    android:paddingRight="8.0dip"
                    android:paddingBottom="8.0dip"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/clear_bg"
                    android:scaleType="centerCrop" />
            </LinearLayout>
            <Button
                android:textSize="17sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/btn_next"
                android:background="@drawable/btn_radius_all_red2dim"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:text="@string/nextsteup" />
            <TextView android:textSize="13dp"
                android:textColor="@color/declare_text"
                android:id="@+id/on_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp" />
            <Button android:textSize="17sp"
                android:textColor="@color/gray_text"
                android:gravity="center"
                android:id="@+id/btn_resend"
                android:enabled="false"
                android:text="@string/resend"
                android:background="@drawable/btn_radius_all"
                android:layout_width="fill_parent"
                android:layout_height="45.0dip"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>