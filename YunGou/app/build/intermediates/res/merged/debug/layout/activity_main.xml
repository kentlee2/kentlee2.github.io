<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E0E0E0"
        android:paddingBottom="2dp"
        android:paddingLeft="10dp"
        android:paddingTop="2dp"
        android:textColor="#8a99ac"
        android:textSize="15sp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/id_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#fff"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/all_stroke_normal"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/rl_main"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:layout_weight="1" >
         <ImageView
             android:id="@+id/home_main"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:src="@drawable/home_selector"/>

         <TextView
             android:id="@+id/tv_home"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_below="@+id/home_main"
             android:textColor="@color/black_text"
             android:textSize="12sp"
             android:gravity="center"
             android:text="首页" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_goods"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:layout_weight="1" >
    <ImageView
             android:id="@+id/home_all_goods"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:src="@drawable/home_goods_selector"/>

         <TextView
             android:id="@+id/tv_goods"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_below="@+id/home_all_goods"
             android:textColor="@color/black_text"
             android:gravity="center"
             android:textSize="12sp"
             android:text="所有商品" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_newest"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:layout_weight="1" >

            <ImageView
             android:id="@+id/home_newest"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:src="@drawable/home_newest_selector"/>

         <TextView
             android:id="@+id/tv_newest"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_below="@+id/home_newest"
             android:textColor="@color/black_text"
             android:gravity="center"
             android:textSize="12sp"
             android:text="最近揭晓" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_cart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:layout_weight="1" >
            <FrameLayout
                android:id="@+id/fl_fram"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_cart_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cart_count_bg"
                    android:text="5"
                    android:gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_gravity="right|top"
                    android:textSize="11sp"
                    android:textColor="@color/white" />
                <ImageView
                    android:id="@+id/home_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/black_text"
                    android:src="@drawable/home_cart_selector"/>
            </FrameLayout>
         <TextView
             android:id="@+id/tv_cart"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_below="@+id/fl_fram"
             android:textColor="@color/black_text"
             android:gravity="center"
             android:textSize="12sp"
             android:text="购物车" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_my"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:layout_weight="1" >

                <ImageView
             android:id="@+id/home_my"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:src="@drawable/home_me_selector"/>

         <TextView
             android:id="@+id/tv_my"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_below="@+id/home_my"
             android:textColor="@color/black_text"
             android:gravity="center"
             android:textSize="12sp"
             android:text="我的" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>