<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/rl_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hq="http://schemas.android.com/apk/res-auto">
    <com.haoqi.yungou.customView.EmptyView
        android:id="@+id/emptyview"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_below="@+id/tb_goods_detail"
        android:visibility="gone"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/layout_bottom" 
        android:background="@drawable/top_stroke_bg" 
        android:paddingLeft="8.0dip"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true">
        <TextView 
            android:textSize="20.0sp" 
            android:textColor="@color/gray_text" 
            android:gravity="center" 
            android:id="@+id/tv_sack" 
            android:background="@drawable/btn_go_shopping_disable" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_marginTop="4.0dip" 
            android:layout_marginBottom="4.0dip"
            android:text="@string/sack"
            android:visibility="gone"
            android:singleLine="true" 
            android:layout_weight="1.0" />
        <Button
            android:textSize="18.0sp" 
            android:textColor="@color/white" 
            android:gravity="center"
            android:id="@+id/btn_check_detail"
            android:background="@drawable/button_go_shopping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4.0dip"
            android:layout_marginBottom="4.0dip"
            android:text="@string/check_detail"
            android:singleLine="true"
            android:visibility="gone"
            android:layout_weight="1.0" />
        <Button
            android:textSize="18.0sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/btn_go_shopping"
            android:background="@drawable/button_go_shopping"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="4.0dip"
            android:layout_marginBottom="4.0dip"
            android:text="@string/go_shopping"
            android:singleLine="true"
            android:layout_weight="1.0" />
        <Button
            android:textSize="18.0sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/btn_add_to_cart"
            android:background="@drawable/button_add_to_cart"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5.0dip"
            android:layout_marginTop="4.0dip"
            android:layout_marginBottom="4.0dip"
            android:text="@string/add_to_cart"
            android:singleLine="true" android:layout_weight="1.0" />
        <RelativeLayout
            android:id="@+id/layout_cart"
            android:background="@android:color/transparent"
            android:layout_width="41.0dip"
            android:layout_height="fill_parent">
            <ImageView
                android:id="@+id/imgv_goods_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cart"
                android:scaleType="centerCrop"
                android:layout_centerInParent="true"
                android:contentDescription="@string/app_name" />
            <TextView
                android:textSize="8.0sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/tv_cart_count"
                android:background="@drawable/cart_count_bg"
                android:layout_width="16.0dip"
                android:layout_height="16.0dip"
                android:layout_margin="2.0dip"
                android:singleLine="true"
                android:visibility="gone"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/scrollview"
        android:background="@color/background"
        android:scrollbars="none"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_above="@+id/layout_bottom">
        <LinearLayout
            android:orientation="vertical"
            android:background="@color/background"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rl_calculating"
                android:background="@drawable/subtheme_bottom_stroke"
                android:paddingTop="16.0dip"
                android:paddingBottom="16.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">
                    <TextView
                        android:textSize="16sp"
                        android:textColor="@color/gray_text"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="正在计算中，结果马上揭晓......" />
                    <ProgressBar
                        android:id="@+id/pgb_progress"
                        android:background="@drawable/progress_round_bg"
                        android:layout_width="fill_parent"
                        android:layout_height="8.0dip"
                        android:layout_marginLeft="8.0dip"
                        android:layout_marginTop="8.0dip"
                        android:layout_marginRight="8.0dip"
                        android:indeterminate="true"
                        android:indeterminateDrawable="@drawable/goods_progress_indeterminate_horizontal"
                        style="?android:attr/progressBarStyleHorizontal" />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_countdown"
                android:background="@drawable/subtheme_bottom_stroke"
                android:layout_width="fill_parent"
                android:layout_height="64.0dip">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_centerInParent="true">
                    <TextView
                        android:textSize="18sp"
                        android:textColor="@color/red_text"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="揭晓倒计时："
                        android:drawableLeft="@drawable/goods_countdown"
                        android:drawablePadding="4.0dip" />
                    <TextView
                        android:textSize="26.0sp"
                        android:textColor="@color/white"
                        android:padding="2dp"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tv_min"
                        android:background="@drawable/goods_countdown_bg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00" />
                    <ImageView
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="4.0dip"
                        android:layout_marginRight="4.0dip"
                        android:src="@drawable/time_divider"
                        android:scaleType="fitCenter" />
                    <TextView
                        android:textSize="26.0sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tv_sec"
                        android:background="@drawable/goods_countdown_bg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00" />
                    <ImageView
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="4.0dip"
                        android:layout_marginRight="4.0dip"
                        android:src="@drawable/time_divider"
                        android:scaleType="fitCenter" />
                    <TextView
                        android:textSize="26.0sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tv_msec"
                        android:background="@drawable/goods_countdown_bg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00" />
                </LinearLayout>
            </RelativeLayout>
            <include
                android:id="@+id/layout_announced_detail_gainer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                layout="@layout/layout_announced_gainer_detail" />
            <include
                android:id="@+id/layout_goods_state"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                layout="@layout/layout_goods_state" />
            <include
                android:id="@+id/layout_announced_gainer_codes"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginTop="8dp"
                layout="@layout/layout_announced_gainer_codes" />
            <include
                android:id="@+id/layout_goods_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                layout="@layout/layout_goods_content" />
            <include
                android:id="@+id/layout_previous_period_gainer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                layout="@layout/layout_previous_period_gainer" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>