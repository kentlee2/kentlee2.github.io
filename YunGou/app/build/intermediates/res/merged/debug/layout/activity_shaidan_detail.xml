<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@color/main_background"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hq="http://schemas.android.com/apk/res-auto">
    <com.haoqi.yungou.customView.EmptyView
        android:id="@+id/emptyview"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
     <ScrollView
        android:id="@+id/scrollview"
        android:paddingBottom="48.0dip"
        android:scrollbars="none"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="@dimen/title_bar_height">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:background="@color/tab_background"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <RelativeLayout android:paddingTop="12.0dip"
                    android:paddingBottom="12.0dip"
                    android:layout_width="fill_parent" 
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8.0dip">
                    <ImageView 
                        android:id="@+id/iv_accountpic" 
                        android:layout_width="56.0dip" 
                        android:layout_height="56.0dip"
                        android:src="@drawable/account_pic_default"
                        android:scaleType="centerCrop" />
                    <RelativeLayout android:layout_width="fill_parent" 
                        android:layout_height="wrap_content" 
                        android:layout_marginLeft="8.0dip"
                        android:layout_marginRight="8.0dip" 
                        android:layout_toRightOf="@+id/iv_accountpic" 
                        android:layout_centerVertical="true">
                        <TextView android:textSize="@dimen/text_small" 
                            android:textColor="@color/link_text"
                            android:id="@+id/tv_accountname" 
                            android:layout_width="wrap_content" 
                            android:layout_height="wrap_content" 
                            android:layout_marginRight="84.0dip"
                            android:text="用户名"
                            android:singleLine="true" />
                        <TextView android:textSize="@dimen/text_micro" 
                            android:textColor="@color/gray_text"
                            android:id="@+id/tv_buytimes" 
                            android:layout_width="wrap_content" 
                            android:layout_height="wrap_content" 
                            android:layout_marginTop="2.0dip" 
                            android:singleLine="true" 
                            android:layout_below="@+id/tv_accountname" 
                            android:layout_alignLeft="@+id/tv_accountname" />
                        <TextView android:textSize="@dimen/text_micro" 
                            android:textColor="@color/gray_text" 
                            android:id="@+id/tv_obtained_goods"
                            android:layout_width="wrap_content" 
                            android:layout_height="wrap_content" android:layout_marginTop="2.0dip"
                            android:singleLine="true" android:layout_below="@+id/tv_buytimes" 
                            android:layout_alignLeft="@+id/tv_accountname" />
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout android:id="@+id/layout_flag_image" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_marginRight="8.0dip" 
                    android:layout_alignParentRight="true">
                    <ImageView android:layout_width="wrap_content" 
                        android:layout_height="wrap_content"
                        android:src="@drawable/award_flag" />
                    <TextView android:textSize="@dimen/text_micro" android:textColor="@color/white"
                        android:gravity="center_horizontal" android:id="@+id/tv_flag_fufen" 
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="限 时" android:layout_centerHorizontal="true" />
                </RelativeLayout>
                <View android:background="@color/stroke" 
                    android:layout_width="fill_parent" 
                    android:layout_height="@dimen/stroke" android:layout_alignParentBottom="true" />
                <ImageView android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:layout_marginLeft="32.0dip"
                    android:src="@drawable/shaidan_detail_arrow" 
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>
            <TextView android:textSize="@dimen/text_large"
                android:textColor="@color/black_text"
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.0dip"
                android:layout_marginTop="8.0dip"
                android:layout_marginRight="8.0dip" />
            <TextView
                android:textSize="@dimen/text_small"
                android:textColor="@color/declare_text"
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.0dip"
                android:layout_marginTop="4.0dip"
                android:layout_marginRight="8.0dip" />
            <TextView
                android:textSize="@dimen/text_medium"
                android:textColor="@color/gray_text"
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.0dip"
                android:layout_marginTop="12.0dip"
                android:layout_marginRight="8.0dip"
                android:lineSpacingMultiplier="1.2" />
            <LinearLayout android:gravity="center_horizontal"
                android:orientation="vertical"
                android:id="@+id/layout_commentpic" android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:layout_marginLeft="8.0dip"
                android:layout_marginTop="12.0dip" android:layout_marginRight="8.0dip" />
            <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <LinearLayout android:orientation="vertical" android:id="@+id/ll_comment"
                    android:background="@drawable/top_stroke_bg" android:layout_width="fill_parent" android:layout_height="wrap_content" />
                <FrameLayout android:id="@+id/fl_check_all_comment"
                    android:background="@color/divider" android:visibility="gone"
                    android:layout_width="fill_parent" android:layout_height="wrap_content">
                    <View android:background="@color/stroke"
                        android:layout_width="fill_parent" android:layout_height="@dimen/stroke" />
                    <FrameLayout android:padding="8.0dip"
                        android:layout_width="fill_parent" android:layout_height="wrap_content">
                        <Button android:textSize="@dimen/text_medium"
                            android:textColor="@color/black_text"
                            android:layout_gravity="center" android:id="@+id/btn_check_all_comment"
                            android:background="@drawable/subtheme_corner"
                            android:layout_width="fill_parent" android:layout_height="40.0dip" />
                    </FrameLayout>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <com.haoqi.yungou.customView.NavigationView
        android:id="@+id/title_bar"
        android:background="@color/theme"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_bar_height"
        hq:leftBackgroud ="@drawable/previous_pre"
        hq:title="@string/shaidan_detail" />
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/top_stroke_bg"
        android:layout_width="fill_parent"
        android:layout_height="48.0dip"
        android:baselineAligned="false"
        android:layout_alignParentBottom="true">
        <RelativeLayout android:id="@+id/rl_envy"
            android:background="@android:color/transparent"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0">
            <TextView android:textSize="@dimen/text_small"
                android:textColor="@color/gray_text"
                android:gravity="center_vertical"
                android:id="@+id/tv_envy"
                android:background="@android:color/transparent"
                android:paddingLeft="8.0dip"
                android:paddingRight="8.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/shaidan_envy"
                android:drawablePadding="4.0dip"
                android:layout_centerInParent="true"
                android:text="点赞"/>
            <TextView android:textSize="@dimen/text_small"
                android:textColor="#ffff0000"
                android:id="@+id/tv_envy_anim"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+1"
                android:layout_alignTop="@+id/tv_envy"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_comment"
            android:background="@android:color/transparent"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0">
            <TextView
                android:textSize="@dimen/text_small"
                android:textColor="@color/gray_text"
                android:gravity="center_vertical"
                android:id="@+id/tv_comment"
                android:background="@android:color/transparent"
                android:paddingLeft="8.0dip"
                android:paddingRight="8.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/shaidan_comment"
                android:text="评论"
                android:drawablePadding="4.0dip"
                android:layout_centerInParent="true" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>