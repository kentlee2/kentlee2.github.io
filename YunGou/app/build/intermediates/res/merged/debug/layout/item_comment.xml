<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:paddingBottom="8.0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@id/iv_accountpic"
        android:layout_marginTop="8dp"
        android:layout_width="56.0dip"
        android:layout_height="56.0dip"
        android:layout_marginLeft="8.0dip"
        android:scaleType="centerCrop" />
    <RelativeLayout
        android:paddingTop="8.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="8.0dip"
        android:layout_toRightOf="@id/iv_accountpic">
        <TextView
            android:textSize="@dimen/text_small"
            android:textColor="@color/cyan_text"
            android:id="@id/tv_accountname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8.0dip"
            android:layout_marginRight="8.0dip"
            android:singleLine="true" />
        <TextView
            android:textSize="@dimen/text_micro"
            android:textColor="@color/declare_text"
            android:gravity="right"
            android:id="@id/tv_date"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_toRightOf="@id/tv_accountname" />
        <TextView
            android:textSize="@dimen/text_small"
            android:textColor="@color/black_text"
            android:id="@id/tv_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="8.0dip"
            android:layout_below="@id/tv_accountname"
            android:layout_alignLeft="@id/tv_accountname" />
    </RelativeLayout>
</RelativeLayout>