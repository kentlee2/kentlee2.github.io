<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:textSize="@dimen/text_micro"
        android:textColor="#ffff6600"
        android:gravity="center"
        android:id="@+id/tv_over_tips"
        android:background="@drawable/corners_shape12"
        android:padding="5.0dip"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/over_tips"
        android:layout_alignParentTop="true" />
    <RelativeLayout
        android:id="@+id/layout"
        android:background="@drawable/item_normal_bg"
        android:paddingLeft="8.0dip"
        android:paddingTop="10.0dip"
        android:paddingRight="8.0dip"
        android:paddingBottom="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/tv_over_tips">
        <ImageView
            android:id="@+id/iv_goodspic"
            android:layout_width="72.0dip"
            android:layout_height="72.0dip"
            android:scaleType="fitCenter" />
        <ImageView
            android:id="@+id/iv_goods_label_cart"
            android:visibility="visible"
            android:layout_width="24.0dip"
            android:layout_height="24.0dip"
            android:src="@drawable/label_limit"
            android:scaleType="fitCenter"
            android:layout_alignLeft="@+id/iv_goodspic"
            android:layout_alignTop="@+id/iv_goodspic"
            android:contentDescription="@string/app_name" />
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/linear_goodsname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8.0dip"
            android:layout_toRightOf="@+id/iv_goodspic">
            <TextView
                android:textSize="@dimen/text_micro"
                android:textColor="@color/theme"
                android:id="@+id/tv_isupdate"
                android:background="@drawable/cart_isupdate"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:singleLine="true" />
            <TextView
                android:textSize="@dimen/text_small"
                android:textColor="@color/black_text"
                android:id="@+id/tv_goodsname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true" />
        </LinearLayout>
        <TextView
            android:textSize="@dimen/text_small"
            android:textColor="@color/gray_text"
            android:id="@+id/tv_surplus_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4.0dip"
            android:text="剩余2人次"
            android:singleLine="true"
            android:layout_below="@+id/linear_goodsname"
            android:layout_alignLeft="@+id/linear_goodsname"
            android:lineSpacingExtra="4.0dip" />
        <ImageButton
            android:id="@+id/ibtn_cart_delete"
            android:background="@drawable/item_normal_bg"
            android:layout_width="32.0dip"
            android:layout_height="32.0dip"
            android:layout_marginTop="1.0dip"
            android:src="@drawable/cart_delete_icon"
            android:layout_below="@+id/tv_surplus_count"
            android:layout_alignParentRight="true"
            android:contentDescription="@string/delete" />
        <RelativeLayout
            android:id="@+id/layout_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1.0dip"
            android:layout_toLeftOf="@+id/ibtn_cart_delete"
            android:layout_below="@+id/tv_surplus_count"
            android:layout_alignLeft="@+id/linear_goodsname">
            <TextView
                android:textSize="@dimen/text_small"
                android:textColor="@color/gray_text"
                android:gravity="center_vertical"
                android:id="@+id/tv_num_tips"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="参与人次"
                android:singleLine="true" />
            <TextView
                android:textSize="@dimen/text_small"
                android:textColor="@color/black_text"
                android:gravity="center"
                android:id="@+id/et_count"
                android:background="@drawable/cart_edit_count_bg"
                android:paddingLeft="4.0dip"
                android:paddingTop="2.0dip"
                android:paddingRight="4.0dip"
                android:paddingBottom="2.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.0dip"
                android:layout_marginRight="8.0dip"
                android:minWidth="64.0dip"
                android:text="11"
                android:singleLine="true"
                android:maxLength="7"
                android:layout_toRightOf="@+id/tv_num_tips" />
            <TextView
                android:textSize="@dimen/text_small"
                android:textColor="@color/red_text"
                android:gravity="center|right"
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tv_count"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:layout_toRightOf="@+id/et_count" />
        </RelativeLayout>
        <TextView
            android:textSize="@dimen/text_small"
            android:textColor="@color/gray_text"
            android:id="@+id/tv_tips"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1.0dip"
            android:layout_toLeftOf="@+id/ibtn_cart_delete"
            android:layout_below="@+id/tv_surplus_count"
            android:layout_alignLeft="@+id/linear_goodsname" />
    </RelativeLayout>
</RelativeLayout>