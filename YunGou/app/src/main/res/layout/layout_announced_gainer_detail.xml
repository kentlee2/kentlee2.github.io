<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    android:background="@color/main_background" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView 
        android:id="@+id/iv_gainer_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8.0dip"
        android:src="@drawable/goods_gainer_indicator"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/app_name" />
    <RelativeLayout
        android:id="@+id/linear_gainer"
        android:padding="8dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <ImageView android:id="@+id/sriv_avatar"
            android:layout_width="70.0dip"
            android:layout_height="70.0dip"
            android:src="@drawable/account_pic_default"
            android:scaleType="centerCrop" />
        <TextView
            android:textSize="@dimen/text_medium"
            android:textColor="@color/link_text"
            android:gravity="center_vertical"
            android:id="@+id/tv_nickname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8.0dip"
            android:lines="1"
            android:scrollHorizontally="true"
            android:layout_toRightOf="@+id/sriv_avatar" />
        <TextView
            android:textSize="@dimen/text_small"
            android:textColor="@color/dimgrey"
            android:gravity="center_vertical"
            android:id="@+id/tv_gainer_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:layout_below="@+id/tv_nickname"
            android:layout_alignLeft="@+id/tv_nickname" />
        <TextView
            android:textSize="@dimen/text_small"
            android:textColor="@color/black_text"
            android:id="@+id/tv_gainer_luck_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_below="@+id/tv_gainer_address"
            android:layout_alignLeft="@+id/tv_nickname" />
        <TextView
            android:textSize="@dimen/text_small"
            android:textColor="@color/gray_text"
            android:id="@+id/tv_announced_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_gainer_luck_code"
            android:layout_alignLeft="@+id/tv_nickname" />
        <TextView
            android:textSize="@dimen/text_small"
            android:textColor="@color/gray_text"
            android:id="@+id/tv_shopping_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_announced_time"
            android:layout_alignLeft="@+id/tv_nickname" />
    </RelativeLayout>
    <View
        android:id="@+id/view_divider"
        android:background="@color/stroke"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/stroke"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_below="@+id/linear_gainer" />
    <RelativeLayout
        android:id="@+id/rl_gainer_goods"
        android:padding="8dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_divider">
        <ImageView
            android:id="@+id/sriv_gainer_goods"
            android:layout_width="96.0dip"
            android:layout_height="96.0dip"
            android:layout_marginRight="8dp"
            android:scaleType="fitCenter"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" />
        <ImageView
            android:id="@+id/iv_label_announced_gainer"
            android:visibility="invisible"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:src="@drawable/label_limit"
            android:scaleType="fitCenter"
            android:layout_alignLeft="@+id/sriv_gainer_goods"
            android:layout_alignTop="@+id/sriv_gainer_goods"
            android:contentDescription="@string/app_name" />
        <TextView
            android:textSize="@dimen/text_medium"
            android:textColor="@color/black_text"
            android:gravity="top"
            android:id="@+id/tv_gainer_goodsname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxLines="6"
            android:layout_toRightOf="@+id/sriv_gainer_goods"
            android:layout_alignTop="@+id/sriv_gainer_goods" />
        <TextView
            android:textSize="@dimen/text_micro"
            android:textColor="@color/gray_text"
            android:id="@+id/tv_gainer_goods_price"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4.0dip"
            android:maxLines="3"
            android:layout_toRightOf="@+id/sriv_gainer_goods"
            android:layout_below="@+id/tv_gainer_goodsname"
            android:lineSpacingExtra="4.0dip" />
    </RelativeLayout>
    <View
        android:id="@+id/view_divider_bottom"
        android:background="@color/stroke"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/stroke"
        android:layout_below="@+id/rl_gainer_goods" />
</RelativeLayout>