<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/layout"
        android:paddingLeft="8.0dip"
        android:paddingTop="8.0dip"
        android:paddingRight="8.0dip"
        android:paddingBottom="8.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <ImageView 
            android:id="@+id/iv_goodspic" 
            android:layout_width="100.0dip"
            android:layout_height="100.0dip"
            android:background="@drawable/goods_pic_default"
            android:scaleType="fitCenter" />
        <ImageView
            android:id="@+id/iv_goods_label_shopping_record"
            android:layout_width="36.0dip"
            android:layout_height="36.0dip" 
            android:src="@drawable/label_limit"
            android:scaleType="fitCenter"
            android:visibility="gone"
            android:layout_alignLeft="@+id/iv_goodspic" 
            android:layout_alignTop="@+id/iv_goodspic" 
            android:contentDescription="@string/app_name" />
        <TextView 
            android:textSize="12sp"
            android:textColor="@color/white"
            android:gravity="center" 
            android:id="@+id/tv_goodslabel" 
            android:background="@drawable/layout_goodslable_black"
            android:paddingLeft="10.0dip"
            android:paddingTop="3.0dip" 
            android:paddingRight="10.0dip" 
            android:paddingBottom="3.0dip" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            android:layout_alignLeft="@+id/iv_goodspic"
            android:layout_alignRight="@+id/iv_goodspic" 
            android:layout_alignBottom="@+id/iv_goodspic" />
        <TextView android:textSize="15.0sp" 
            android:textColor="@color/black_text"
            android:ellipsize="end"
            android:id="@+id/tv_goodsname" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_marginLeft="8.0dip" 
            android:layout_marginRight="8.0dip" 
            android:maxLines="2" 
            android:layout_toRightOf="@+id/iv_goodspic" 
            android:layout_alignTop="@+id/iv_goodspic" />
        <TextView android:textSize="13.0sp" 
            android:textColor="@color/declare_text"
            android:id="@+id/tv_goodsprice"
            android:visibility="gone" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_marginTop="2.0dip" 
            android:singleLine="true" 
            android:layout_below="@+id/tv_goodsname" 
            android:layout_alignLeft="@+id/tv_goodsname" />
        <LinearLayout
            android:id="@+id/layout_progress"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8.0dip"
            android:layout_marginRight="8.0dip"
            android:layout_below="@+id/tv_goodsprice"
            android:layout_alignLeft="@+id/tv_goodsprice">
            <ProgressBar
                style="@style/StyleProgressBarMini"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:max="100"
                android:id="@+id/participation" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/hasJoin_num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/red_text"
                    android:textSize="11sp"
                    android:text="0"/>
                <TextView
                    android:id="@+id/total_num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textColor="@color/black_text"
                    android:textSize="11sp"
                    android:text="0"/>
                <TextView
                    android:id="@+id/remain_num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/blue"
                    android:textSize="11sp"
                    android:text="0"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="11sp"
                    android:textColor="@color/gray_text"
                    android:text="已参与"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textSize="11sp"
                    android:textColor="@color/gray_text"
                    android:text="总需人次"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textSize="11sp"
                    android:textColor="@color/gray_text"
                    android:text="剩余"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical" 
            android:id="@+id/layout_getter" 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            android:layout_marginTop="8.0dip" 
            android:layout_marginRight="8.0dip" 
            android:layout_below="@+id/tv_goodsprice" 
            android:layout_alignLeft="@+id/tv_goodsprice">
            <TextView android:textSize="13.0sp"
                android:textColor="@color/gray_text"
                android:id="@+id/tv_getter" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:singleLine="true" />
            <TextView android:textSize="13.0sp"
                android:textColor="@color/gray_text"
                android:id="@+id/tv_code" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                android:singleLine="true" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>