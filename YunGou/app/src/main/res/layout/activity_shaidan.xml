<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:hq="http://schemas.android.com/apk/res-auto"
    tools:context="com.haoqi.yungou.Activity.ShaidanActivity">
    <com.haoqi.yungou.customView.NavigationView
        android:id="@+id/nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        hq:leftBackgroud ="@drawable/previous_pre"
        hq:title = "@string/shaidan"/>
    <RelativeLayout
        android:id="@+id/rl_goods"
        android:paddingLeft="8.0dip"
        android:paddingTop="8.0dip"
        android:paddingRight="8.0dip"
        android:paddingBottom="8.0dip"
        android:background="@color/white"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <ImageView android:id="@+id/iv_goodspic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitCenter"
            android:background="@drawable/goods_pic_default" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/default_gap"
            android:layout_toRightOf="@+id/iv_goodspic">
            <TextView
                android:textSize="15.0sp"
                android:textColor="@color/black_text"
                android:ellipsize="end"
                android:id="@+id/tv_goodsname"
                android:layout_width="wrap_content"
                android:text="房贷首付第三方的司法手段发达省份的岁"
                android:layout_height="wrap_content"
                android:layout_marginRight="8.0dip"
                android:maxLines="2" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp">
                <TextView android:textSize="12.0sp"
                    android:textColor="@color/gray_text"
                    android:text="幸运云购码:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_cound"
                    android:singleLine="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12.0sp"
                    android:textColor="@color/red_text"
                    android:text="2fdsfds"
                    android:id="@+id/tv_cloudNo"
                    android:layout_toRightOf="@+id/tv_cound" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp">
                <TextView android:textSize="13.0sp"
                    android:textColor="@color/declare_text"
                    android:text="价值:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true" />
                <TextView android:textSize="13.0sp"
                    android:textColor="@color/red_text"
                    android:id="@+id/tv_price"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@+id/rl_goods"
        android:background="@color/divider"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">
        <TextView
            android:id="@+id/shaidan_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shaidan_title"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/et_shaidan_title"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/default_gap"
            android:layout_marginRight="@dimen/default_gap"
            android:background="@drawable/layout_radius_all_white_stroke_gray"
            android:layout_toRightOf="@+id/shaidan_title" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">
        <TextView
            android:id="@+id/shaidan_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shaidan_detail"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/et_detail"
            android:gravity="top"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/default_gap"
            android:layout_marginRight="@dimen/default_gap"
            android:background="@drawable/layout_radius_all_white_stroke_gray"
            android:layout_toRightOf="@+id/shaidan_detail" />
    </RelativeLayout>
    <GridView
        android:id="@+id/noScrollgridview"
        android:layout_width="290dp"
        android:layout_height="100dp"
        android:layout_marginLeft="5dp"
        android:horizontalSpacing="3dp"
        android:numColumns="4"
        android:scrollbars="none"
        android:verticalSpacing="5dp" >
    </GridView>
    <Button
        android:textSize="17sp"
        android:textColor="@color/white"
        android:onClick="submit"
        android:background="@drawable/btn_radius_all_red2dim"
        android:padding="8.0dip"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/submit" />
</LinearLayout>
