<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:paddingLeft="8.0dip"
    android:paddingTop="8.0dip"
    android:paddingRight="8.0dip"
    android:paddingBottom="8.0dip"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView android:id="@+id/iv_goodspic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        android:background="@drawable/goods_pic_default" />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_marginLeft="@dimen/default_gap"
      android:layout_toRightOf="@+id/iv_goodspic">
      <TextView
          android:textSize="15.0sp"
          android:textColor="@color/black_text"
          android:ellipsize="end"
          android:id="@+id/tv_goodsname"
          android:layout_width="wrap_content"
          android:text="房贷首付第三方的司法手段发达省份的岁"
          android:layout_height="wrap_content"
          android:layout_marginRight="8.0dip"
          android:maxLines="2" />
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <TextView android:textSize="12.0sp"
              android:textColor="@color/gray_text"
              android:text="幸运云购码:"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/tv_cound"
              android:singleLine="true" />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="12.0sp"
              android:textColor="@color/red_text"
              android:text="2fdsfds"
              android:id="@+id/tv_cloudNo"
              android:layout_toRightOf="@+id/tv_cound" />
      </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <TextView android:textSize="13.0sp"
          android:textColor="@color/declare_text"
          android:text="价值:"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:singleLine="true" />
      <TextView android:textSize="13.0sp"
          android:textColor="@color/red_text"
          android:id="@+id/tv_price"
          android:text=""
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:singleLine="true" />
    </LinearLayout>
      <TextView android:textSize="13.0sp"
          android:textColor="@color/red_text"
          android:id="@+id/tv_goods_status"
          android:text="等待卖家发货"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:singleLine="true"
          android:layout_below="@+id/tv_cloudNo"
          android:layout_gravity="right"  />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/default_gap"
    android:gravity="right"
    android:orientation="horizontal">
      <Button
          android:layout_width="wrap_content"
          android:layout_height="30dp"
          android:text="查看物流"
          android:id="@+id/btn_tranfor"
          android:textColor="@color/black_text"
          android:layout_marginRight="10dp"
          android:textSize="14sp"
          android:background="@drawable/btn_radius_all" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="@string/to_shaidan"
        android:id="@+id/btn_shaidan"
        android:textColor="@color/white"
        android:visibility="gone"
        android:textSize="14sp"
        android:background="@drawable/btn_radius_all_red2dim" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="@string/add_address"
        android:visibility="gone"
        android:id="@+id/add_address"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:background="@drawable/btn_radius_all_red2dim" />
      <Button
          android:layout_width="wrap_content"
          android:layout_height="30dp"
          android:text="确认收货"
          android:id="@+id/btn_comfirm"
          android:textColor="@color/white"
          android:visibility="gone"
          android:textSize="14sp"
          android:background="@drawable/btn_radius_all_red2dim" />
</LinearLayout>
  </LinearLayout>


</RelativeLayout>