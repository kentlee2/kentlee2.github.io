<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/layout"
        android:paddingLeft="8.0dip"
        android:paddingTop="8.0dip"
        android:paddingRight="8.0dip"
        android:paddingBottom="8.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_shaidanpic"
            android:layout_width="100.0dip"
            android:layout_height="100.0dip"
            android:scaleType="fitCenter" />

        <TextView android:textSize="15.0sp"
            android:textColor="@color/black_text"
            android:ellipsize="end"
            android:id="@+id/shaidan_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8.0dip"
            android:text="晒单标题"
            android:layout_marginRight="8.0dip"
            android:maxLines="2"
            android:layout_toRightOf="@+id/iv_shaidanpic"
            android:layout_alignTop="@+id/iv_shaidanpic" />
        <TextView android:textSize="13.0sp"
            android:textColor="@color/declare_text"
            android:id="@+id/shandan_detail"
            android:text="晒单详情"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:maxLength="20"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_below="@+id/shaidan_title"
            android:layout_alignLeft="@+id/shaidan_title"
            android:layout_alignStart="@+id/shaidan_title" />
        <TextView android:textSize="13.0sp"
            android:textColor="@color/declare_text"
            android:id="@+id/shandan_time"
            android:text="晒单时间"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:maxLength="20"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_below="@+id/shandan_detail"
            android:layout_alignLeft="@+id/shaidan_title"
            android:layout_alignStart="@+id/shaidan_title" />
        <TextView android:textSize="13.0sp"
            android:id="@+id/shandan_status"
            android:text="审核状态"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:maxLength="20"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_below="@+id/shandan_time"
            android:layout_alignLeft="@+id/shaidan_title"
            android:layout_alignStart="@+id/shaidan_title" />
    </RelativeLayout>
</LinearLayout>