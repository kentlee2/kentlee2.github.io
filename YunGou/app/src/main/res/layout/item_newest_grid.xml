<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rl_item1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ractancle_red_normal"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:maxLines="2"
            android:textSize="12sp"
            android:textColor="@color/black_text"
            android:ellipsize="end"
            android:layout_marginLeft="8dp"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/iv_goods_img" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/theme"
            android:layout_marginBottom="5dp"
            android:padding="2dp"
            android:layout_alignBottom="@+id/iv_goods_img"
            android:layout_alignLeft="@+id/tv_goods_name"
            android:layout_alignStart="@+id/tv_goods_name" />
        <ImageView
            android:id="@+id/iv_goods_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:scaleType="centerInside"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"/>
    </RelativeLayout>