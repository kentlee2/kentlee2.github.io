<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@color/main_background"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.haoqi.yungou.customView.EmptyView
        android:id="@id/emptyview" android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
    <com.haoqi.yungou.customView.NavigationView
        android:id="@id/title_bar"
        android:background="@color/theme"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_bar_height"
        app:leftBackgroud ="@drawable/previous_pre"
        app:title ="@string/all_shaidan_comment"/>
    <com.haoqi.yungou.widget.XListView
        android:id="@+id/listview_comment"
        android:fadingEdge="none"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:divider="@color/stroke"
        android:dividerHeight="@dimen/stroke"
        android:layout_below="@id/title_bar"
        android:headerDividersEnabled="false"
        android:footerDividersEnabled="false"
        android:layout_above="@+id/relativeLayout2" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:layout_alignParentBottom="true"
        android:background="@color/main_background"
        android:id="@+id/relativeLayout2">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/et_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/default_gap"
            android:hint="说两句吧"
            android:paddingLeft="2dp"
            android:background="@drawable/layout_radius_all_white_stroke_gray"
            android:layout_toRightOf="@+id/iv_search_back"
            android:layout_toStartOf="@+id/comment_send"
            android:layout_toLeftOf="@+id/comment_send" />
        <Button
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:gravity="center"
            android:textSize="@dimen/text_medium"
            android:clickable="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_radius_all_red2dim"
            android:text="@string/send"
            android:id="@+id/comment_send" />
    </RelativeLayout>
</RelativeLayout>