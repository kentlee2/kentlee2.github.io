<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:hq="http://schemas.android.com/apk/res-auto">
<com.haoqi.yungou.customView.NavigationView
    android:id="@+id/albume_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    hq:leftBackgroud="@drawable/previous_pre"
    hq:title="@string/album"/>
    <GridView
        android:id="@+id/all_bum_GridView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:cacheColorHint="@color/transparent"
        android:layout_below="@+id/albume_bar"
        android:horizontalSpacing="1dp"
        android:numColumns="3"
        android:paddingBottom="46dp"
        android:stretchMode="columnWidth"
        android:verticalSpacing="4dp" />

    <TextView
        android:id="@+id/all_bum_tv_noPhoto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="相册没有图片"
        android:textColor="@color/black_text" />

    <ProgressBar
        android:id="@+id/all_bum_ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/all_bum_linear_bottom"
        android:background="@color/white"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/gray_text"
            android:paddingBottom="46dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/all_bum_btn_send"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:minWidth="55dip"
                android:background="@drawable/common_tab_bg"
                android:text="发送"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/all_bum_tv_photoNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/all_bum_btn_send"
                android:layout_alignBottom="@+id/all_bum_btn_send"
                android:layout_toLeftOf="@+id/all_bum_btn_send"
                android:background="@drawable/circle_red_dot_bg"
                android:gravity="center"
                android:textColor="@color/white"
                android:visibility="gone"
                />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>