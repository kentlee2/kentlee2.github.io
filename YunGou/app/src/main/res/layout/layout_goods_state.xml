<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@drawable/bottom_stroke"
    android:padding="8dp"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/fl_goods"
            android:layout_width="120.0dip"
            android:layout_height="120.0dip">
            <ImageView
                android:id="@+id/sriv_goods"
                android:layout_width="120.0dip"
                android:layout_height="120.0dip"
                android:scaleType="fitCenter" />
            <ImageView
                android:layout_gravity="center|left|top"
                android:id="@+id/iv_label_goods_state"
                android:visibility="invisible"
                android:layout_width="48.0dip"
                android:layout_height="48.0dip"
                android:src="@drawable/label_limit"
                android:scaleType="fitCenter"
                android:contentDescription="@string/app_name" />
            <ImageView
                android:layout_gravity="bottom|center|right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8.0dip"
                android:layout_marginBottom="8.0dip"
                android:src="@drawable/view_big_pic"
                android:visibility="gone"
                android:contentDescription="@string/app_name" />
        </FrameLayout>
        <TextView
            android:textSize="@dimen/text_medium"
            android:textColor="@color/black_text"
            android:gravity="top"
            android:id="@+id/tv_goodsname"
            android:text="商品名"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8.0dip"
            android:maxLines="6"
            android:layout_toRightOf="@+id/fl_goods"
            android:layout_alignTop="@+id/fl_goods" />
        <TextView
            android:textSize="@dimen/text_micro"
            android:textColor="@color/gray_text"
            android:id="@+id/tv_goods_price"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8.0dip"
            android:layout_marginTop="4.0dip"
            android:text="￥5.00"
            android:maxLines="3"
            android:layout_toRightOf="@+id/fl_goods"
            android:layout_below="@+id/tv_goodsname"
            android:lineSpacingExtra="4.0dip" />
        <TextView
            android:textSize="@dimen/text_micro"
            android:textColor="@color/red_text"
            android:id="@+id/tv_listmit_good"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8.0dip"
            android:layout_marginTop="4.0dip"
            android:text="限购5人次"
            android:visibility="gone"
            android:maxLines="1"
            android:layout_toRightOf="@+id/fl_goods"
            android:layout_below="@+id/tv_goods_price"
            android:lineSpacingExtra="4.0dip" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8.0dip">
        <ProgressBar
            style="@style/StyleProgressBarMini"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:max="100"
            android:id="@+id/participation" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/hasJoin_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/red_text"
                android:textSize="11sp"
                android:text="0"/>
            <TextView
                android:id="@+id/total_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/black_text"
                android:textSize="11sp"
                android:text="0"/>
            <TextView
                android:id="@+id/remain_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/blue"
                android:textSize="11sp"
                android:text="0"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="11sp"
            android:textColor="@color/gray_text"
            android:text="已参与"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="11sp"
            android:textColor="@color/gray_text"
            android:text="总需人次"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textSize="11sp"
            android:textColor="@color/gray_text"
            android:text="剩余"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="@color/stroke"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/stroke"
        android:layout_marginTop="8.0dip"
        android:layout_marginBottom="8.0dip" />
    <RelativeLayout
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2.0dip"
        android:layout_marginBottom="2.0dip">
        <TextView
            android:textSize="12.0sp"
            android:textColor="@color/declare_text"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:drawableLeft="@drawable/justice"
            android:drawablePadding="2.0dip"
            android:layout_alignParentLeft="true" />
        <TextView
            android:textSize="12.0sp"
            android:textColor="@color/declare_text"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:drawableLeft="@drawable/authentic"
            android:drawablePadding="2.0dip"
            android:layout_centerHorizontal="true" />
        <TextView
            android:textSize="12.0sp"
            android:textColor="@color/declare_text"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:drawableLeft="@drawable/delivery"
            android:drawablePadding="2.0dip"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
</LinearLayout>