<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/rl_root"
    android:background="@color/main_background"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/theme"
        android:id="@+id/relativeLayout">
        <ImageView
            android:id="@+id/iv_search_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="13dp"
            android:background="@drawable/common_tab_bg"
            android:src="@drawable/previous_pre"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/et_search_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/default_gap"
            android:layout_marginRight="@dimen/default_gap"
            android:paddingLeft="2dp"
            android:background="@drawable/layout_radius_all_white_stroke_gray"
            android:layout_toRightOf="@+id/iv_search_back"
            android:layout_toLeftOf="@+id/tv_goods_search"
            android:layout_toStartOf="@+id/tv_goods_search" />
        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="18sp"
            android:clickable="true"
            android:layout_centerVertical="true"
            android:background="@drawable/common_tab_bg"
            android:text="@string/search"
            android:id="@+id/tv_goods_search" />
    </RelativeLayout>
    <com.haoqi.yungou.widget.XListView
        android:id="@+id/lv_search"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@color/stroke"
        android:footerDividersEnabled="false"
        android:dividerHeight="@dimen/stroke"
        android:layout_below="@+id/relativeLayout" />
    <RelativeLayout
        android:id="@+id/rl_cart"
        android:background="@drawable/cart_circle_bg"
        android:layout_width="54.0dip"
        android:layout_height="54.0dip"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true">
        <FrameLayout
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <LinearLayout
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:padding="2.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_cart"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/search_cart" />
            </LinearLayout>
            <TextView
                android:textSize="10.0sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center|right|top"
                android:id="@+id/tv_cart_counter"
                android:background="@drawable/cart_count_bg"
                android:layout_width="16.0dip"
                android:layout_height="16.0dip" />
        </FrameLayout>
    </RelativeLayout>
</RelativeLayout>